<%= turbo_frame_tag dom_id(tag) do %>
  <li class="blog-tag tag_<%= tag.id %>">
    <span><%= tag.text %></span>
    <strong class="resource-action-divider has-text-link">|</strong>
    <%= link_to("Delete", tag_path(tag), method: :delete, class: "has-text-link", data: { turbo_method: "delete", turbo_confirm: "Are you sure you want to delete the '#{tag.text}' tag? This action is permanent." }) %>
  </li>
<% end %>
