<div class="new-email">
  <div class="new-email-form-container">
    <h2 class="title is-4">New email</h2>

    <%= form_with(model: @email, url: emails_path) do |f| %>
      <div class="field">
        <%= f.label :subject %>
        <%= f.text_field :subject, autocomplete: 'off', class: "input" %>
      </div>

      <div class="field">
        <%= f.label :body %><br />
        <%= f.rich_text_area :body %>
      </div>

      <div class="field">
        <%= f.label "Call to action text" %><br />
        <%= f.text_area :cta_text, autocomplete: 'off', class: "input" %>
      </div>

      <div class="field">
        <%= f.label "Call to action link" %><br />
        <%= f.text_area :cta_link, autocomplete: 'off', class: "input" %>
      </div>

      <div class="field">
        <%= f.label :sent_at %><br />
        <%= f.datetime_select :sent_at, ampm: true, use_short_month: true, order: [:month, :day, :year], minute_step: 15, start_year: 1.year.ago.year %>
        <small class="has-text-grey-light">(USA Pacific Time)</small>
      </div>

      <div class="field">
        <%= f.label "Save as draft" %>
        <%= f.check_box :is_draft %>
      </div>

      <div class="actions">
        <%= f.submit "Create", class: "button is-info" %>
        <%= link_to "Back", emails_path, class: "button is-info is-outlined" %>
      </div>
    <% end %>
  </div>
</div>
